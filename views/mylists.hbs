<h1 class="mylist-title">My Lists</h1>
<div class="row">
{{#each lists}}
 <h2 class="list-name">{{name}}</h2> 
  {{#each movies}}
  <div class="card" style="width: 18rem;">
  <img src="{{poster}}" class="card-img-top" alt="movie poster">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <form action="/mylists/{{../id}}/list/{{id}}/delete" method="POST">
       <button type="submit" class="btn btn-danger"> Delete</button>
    </form>
  </div>
</div>   
    {{/each}}
  {{/each}}
</div>

<hr>

<form action="/mylists/add" method="POST">
 <div class="row mb-3">
    <label for="inputEmail3" class="create-intro col-sm-2 col-form-label">🍿 Create New List</label>
    <div class="input-create col-sm-10">
      <input type="text" name="name" class="form-space form-control">
    </div>
     <button type="submit" class="btn btn-create btn-primary">Create</button>
  </div>
</form>   


  <a href="/">Back to the main page</a>