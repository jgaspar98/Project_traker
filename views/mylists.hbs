<h1 class="mylist-title">My Lists</h1>
<div class="row">
{{#each lists}}
 <h2 class="list-name">{{name}}</h2> 
  {{#each movies}}
  <div class="card" style="width: 18rem;">
  <img src="{{poster}}" class="card-img-top" alt="movie poster">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <form action="/movies/{{imdbid}}/delete" method="POST">
       <button type="submit" class="btn btn-danger"> Delete</button>
    </form>
  </div>
</div>   
    {{/each}}
  {{/each}}
</div>

